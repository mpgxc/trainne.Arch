{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "prettier/@typescript-eslint",
        "plugin:prettier/recommended",
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "prettier",
        "plugin:@typescript-eslint/recommended",
        "@typescript-eslint"
    ],
    "rules": {
        "prettier/prettier": "error",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never"
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
